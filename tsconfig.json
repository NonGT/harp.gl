{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "sourceMap": true,
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "./dist/node_modules/",
        "strict": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "newLine": "LF",
        "noImplicitReturns": true
    },
    "exclude": ["node_modules", "@here/*/node_modules", "dist"]
}
